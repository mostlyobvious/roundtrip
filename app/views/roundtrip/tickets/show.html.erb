<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th colspan="3"><%= "[#{@ticket.id}] #{@ticket.summary}" %></th>
  </tr>
  <tr>
    <th>Status</th>
    <th>Opened</th>
    <th>Last updated</th>
  </tr>
  <tr>
    <td><%= @ticket.state.upcase %></td>
    <td><%= I18n.l(@ticket.created_at) %></td>
    <td><%= I18n.l(@ticket.updated_at) %></td>
  </tr>
  <% @ticket.comments.each do |comment| %>
    <tr>
      <td><%= comment.author.display_name %></td>
      <td><%= comment.description %></td>
    </tr> 
  <% end %>
  <%= render :partial => "comment_form" if @ticket.updatable? %>
</table>

<%= link_to 'Back', tickets_path %>
